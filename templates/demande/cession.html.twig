{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body_id %}{% endblock %}

{% block class %}body-ccm{% endblock %}

{% block page_content %}
<div class="col-md-12 col-lg-8 d-flex flex-row justify-content-center my-flex-container align-items-center">
	<div class="row d-flex comment-ca-marche-texte flex-row-reverse my-flex-container">
        <div class="col-12 commander-firstview">
            <div class="row col-12 ">
                <div class="container">
                    <h2 class="text-center"> Formulaire pour <br> {{ commande.demarche.nom|upper }}</h2>
                    <br>
                        <hr>
                        {{ form_start(form, {'attr': {'class': 'row'}}) }}
                            <div class="col-4 mx-auto">
                                {% include "demande/caracteristicVehicle.html.twig" %}
                            </div>
                            <div class="col-3 mx-auto form-row">
                                <div class="col-11">
                                    <h3 class="text-center">Date de cession</h3>
                                        <hr>
                                            <div class="form-group">
                                                {{ form_label(form.cession.dateCession)}}
                                                {{ form_errors(form.cession.dateCession)}}
                                                {{ form_widget(form.cession.dateCession, {'attr': {'class': ''}})}}
                                            </div>
                                        <br>

                                    <h3 class="text-center">{{ form_label(form.cession.ancienTitulaire) }}</h3>
                                        <hr>
                                        {% for antiTitulaire in form.cession.ancienTitulaire %}
                                            <div class="form-group">
                                                {{ form_label(antiTitulaire)}}
                                                {{ form_errors(antiTitulaire)}}
                                                {{ form_widget(antiTitulaire, {'attr': {'class': ''}})}}
                                            </div>
                                        {% endfor %}
                                        <br>
                                    
                                        <h3 class="text-center">Acquerreur</h3>
                                        <h5> {{ form_label(form.cession.acquerreur.adresseNewTitulaire) }} </h3>
                                        <hr>
                                        {% for acquerreur in form.cession.acquerreur %}
                                            {% if loop.index < 7 %}
                                                <div class="form-group">
                                                    {{ form_label(acquerreur)}}
                                                    {{ form_errors(acquerreur)}}
                                                    {{ form_widget(acquerreur, {'attr': {'class': ''}})}}
                                                </div>
                                            {% endif %}
                                        {% endfor %}
                                </div>
                            </div>
                            <div class="col-3 mx-auto">
                                <div class="col-11">
                                    {% for addresseNewTitulaire in form.cession.acquerreur.adresseNewTitulaire %}
                                        <div class="form-group">
                                            {{ form_label(addresseNewTitulaire)}}
                                            {{ form_errors(addresseNewTitulaire)}}
                                            {{ form_widget(addresseNewTitulaire, {'attr': {'class': ''}})}}
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                            {{form_rest(form)}}
                            <div class="col-12 text-center mb-5">
                                <br>
                                <input type="submit" class="btn btn-lg btn-success" value="Valider">
                            </div>
                        {{ form_end(form) }}
                </div>
            </div>
        </div>
	</div>
</div>
{% endblock %}